{
  "DEVELOPMENT": {
    "put": "./asset",
    "out": "./.local",
    "process": {},
    "weirs": [
      ["./embed", {
        "js": ["EmbedJs", "utf8"]
      }],
      ["./image", {
        "jpg": "OptimizeJpg",
        "png": "OptimizePng"
      }],
      ["./post", {
        "md": ["MarkdownToHtml", "utf8"]
      }],
      ["./svg", {
        "svg": "OptimizeSvg"
      }]
    ],
    "ignore": {
      "targets": [
        "./favicons",
        "./embed/ganalytics.js"
      ]
    }
  },

  "PRODUCTION": {
    "put": "./asset",
    "out": "./.site",
    "process": {},
    "weirs": [
      ["./embed/ganalytics.js", {
        "js": ["EmbedJs", "utf8"]
      }],
      ["./favicons/index.png", {
        "png": "EmbedFavicons"
      }],
      ["./post", {
        "md": ["MarkdownToHtml", "utf8"]
      }],
      ["./svg", {
        "svg": "OptimizeSvg"
      }]
    ],
    "//weirs": [
      ["./image", { "jpg": "OptimizeJpg", "png": "OptimizePng" }],
      ["./post", ["MarkdownToHtml", "utf8"]]
    ],
    "ignore": {
      "targets": [
        "./embed/onerror.js"
      ]
    }
  },

  "INKSCHIN": {
    "put": "./ikc",
    "out": "./asset",
    "weirs": [
      ["./favicons", {
        "svg": ["InkPngWhite", null, "stream"]
      }],
      ["./image", {
        "svg": ["InkPngWhite", null, "stream"]
      }],
      ["./pdf", {
        "svg": ["InkPdf", null, "stream"]
      }]
    ]
  }
}
